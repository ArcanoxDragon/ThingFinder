@using ThingFinder.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title>
        @if (ViewData["Title"] is string title) {
            @:@title -&nbsp;
        }

        @Constants.SiteName
    </title>

    <link rel="stylesheet" href="~/css/themes/default-dark.css" asp-append-version="true"/> @* TODO: Theme selection *@

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @RenderBody()

    <script src="~/js/webpack.runtime.js" asp-append-version="true"></script>
    <script src="~/js/vendor.js" asp-append-version="true"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>